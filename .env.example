# Database Configuration
DATABASE_URL="file:./dev.db"

# Application URL
NEXT_PUBLIC_URL="http://localhost:3000"

# Admin Panel Credentials
ADMIN_USERNAME="admin"
# For development: plain password (NOT RECOMMENDED FOR PRODUCTION)
ADMIN_PASSWORD="change_this_password"
# For production: bcrypt hash (generate with: npm run hash-password)
# ADMIN_PASSWORD_HASH="$2b$10$..."

# API Security
REVALIDATION_SECRET="change_this_secret"

# Stripe Payment (Optional)
# Get your keys from https://dashboard.stripe.com/apikeys
# STRIPE_SECRET_KEY="sk_test_..."
# STRIPE_WEBHOOK_SECRET="whsec_..."
# NEXT_PUBLIC_STRIPE_ENABLED="true"

# Google Analytics (Optional)
# Get your ID from https://analytics.google.com
# NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Sentry Error Tracking (Optional)
# Get your DSN from https://sentry.io
# NEXT_PUBLIC_SENTRY_DSN="https://xxxxx@xxxxx.ingest.sentry.io/xxxxx"
# SENTRY_ORG="your-org"
# SENTRY_PROJECT="your-project"
# SENTRY_AUTH_TOKEN="your-auth-token"

# PayPal Payment Gateway (Optional)
# Get your credentials from https://developer.paypal.com
# Use sandbox credentials for testing
# PAYPAL_CLIENT_ID="your-client-id"
# PAYPAL_CLIENT_SECRET="your-client-secret"

# Live Chat Support (Optional - Tawk.to)
# Sign up at https://www.tawk.to and get your property ID and widget ID
# NEXT_PUBLIC_TAWK_PROPERTY_ID="your-property-id"
# NEXT_PUBLIC_TAWK_WIDGET_ID="your-widget-id"

# Resend Email Service (Optional)
# Get your API key from https://resend.com/api-keys
# RESEND_API_KEY="re_..."
# ADMIN_EMAIL="admin@fritzforge.com"
