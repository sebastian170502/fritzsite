generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  description String
  price       Decimal  // SQLite treats this as Float/String mathematically
  stock       Int      @default(0)
  images      String   // Stored as JSON string ["url1", "url2"]
  material    String?  // e.g., "carbon-steel", "wrought-iron"
  category    String?  // e.g., "knife", "axe", "tool"
  isFeatured  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
